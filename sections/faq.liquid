<div class="faq wrapper">

    <div class="accordion-container">
        {%- for block in section.blocks -%}
            <div class="ac">
                <h2 class="ac-header">
                    <button type="button" class="ac-trigger">
                        {{ block.settings.question }}
                    </button>
                </h2>
                <div class="ac-panel">
                    <p class="ac-text">
                        {{ block.settings.answer }}
                    </p>
                </div>
            </div>
        {%- endfor -%}
    </div>

</div>

{% schema %}
{
  "name": "Faq",
  "settings": [
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "Faq",
      "settings": [
        {
          "type": "richtext",
          "id": "question",
          "label": "Question text"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer text"
        }
      ]
    }
  ]
}
{% endschema %}